<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/pbba_button_bank_logo_container_padding"
    android:paddingRight="@dimen/pbba_button_bank_logo_container_padding">

    <FrameLayout
        android:layout_width="@dimen/pbba_button_bank_logo_container_width"
        android:layout_height="@dimen/pbba_button_bank_logo_container_height"
        android:padding="@dimen/pbba_button_bank_logo_sub_container_padding">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/pbba_available_bank_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"/>
    </FrameLayout>
</LinearLayout>