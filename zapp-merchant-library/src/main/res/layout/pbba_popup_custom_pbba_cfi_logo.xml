<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/pbba_image_size_custom_pbba_cfi_logo"
        android:layout_height="@dimen/pbba_image_size_custom_pbba_cfi_logo"
        android:layout_marginTop="@dimen/pbba_margin_custom_pbba_cfi_logo"
        android:layout_marginEnd="@dimen/pbba_margin_custom_pbba_cfi_logo"
        android:layout_marginRight="@dimen/pbba_margin_custom_pbba_cfi_logo"
        android:layout_marginBottom="@dimen/pbba_margin_custom_pbba_cfi_logo"
        android:padding="@dimen/pbba_button_bank_logo_sub_container_padding">

        <ImageView
            android:id="@+id/pbba_available_bank_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true" />
    </FrameLayout>
</LinearLayout>