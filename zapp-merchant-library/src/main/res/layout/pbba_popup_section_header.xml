<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pbba_popup_headerheight"
        android:layout_marginTop="@dimen/pbba_popup_headermargintop"
        tools:showIn="@layout/pbba_popup_about">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pbba_popup_close"
            android:layout_marginRight="@dimen/pbba_popup_close_margin_right"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/pbba_popup_close_padding"
            android:paddingLeft="@dimen/pbba_popup_close_padding"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/pbba_accessibility_close_popup_button"
            app:srcCompat="@drawable/ic_close_svg"
            tools:ignore="RtlHardcoded" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pbba_popup_pay_by_bank_app_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_pbba_logo_black_svg"
            tools:ignore="UnusedIds" />
    </RelativeLayout>
</FrameLayout>
