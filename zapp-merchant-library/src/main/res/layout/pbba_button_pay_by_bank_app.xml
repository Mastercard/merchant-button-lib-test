<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pbba="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/pbba_button_container"
        style="@style/PBBAButton.Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/pbba_accessibility_pay_by_bank_app_button"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/progress"
            style="@style/PBBAButton.Progress"
            android:layout_gravity="right|center"
            android:foregroundGravity="right|center"
            pbba:srcCompat="@drawable/ic_pbba_pay_by_bank_app_symbol"
            android:tint="@color/pbba_button_foreground_color" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pbba_button_pay_by_bank_app_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pbba_button_type1_bankappicon_margin_left_new"
            android:paddingBottom="@dimen/pbba_button_pay_by_bank_app_textimage_padding_topbottom"
            android:paddingTop="@dimen/pbba_button_pay_by_bank_app_textimage_padding_topbottom"
            pbba:srcCompat="@drawable/ic_pbba_pay_by_bank_app_textimage"
            android:tint="@color/pbba_button_foreground_color"
            tools:ignore="RtlHardcoded,UnusedIds" />
        <LinearLayout
            android:id="@+id/ll_bankapplogos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pbba_button_bank_icon_size"
            android:layout_gravity="right|center"
            android:layout_marginRight="8dp"
            android:divider="@drawable/pbba_popup_about_divider"
            android:gravity="right|center"
            android:orientation="horizontal"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pbba_button_more_about_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pbba_button_more_about_pbba_container_margin_top"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.zapp.library.merchant.ui.view.CustomTextView
            style="@style/PBBAPopup.Text.Title"
            android:layout_width="wrap_content"
            android:id="@+id/pbba_button_more_about_container_paysecurely_text"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/pbba_button_more_about_info_firstline_text"
            android:textSize="@dimen/pbba_button_more_about_pbba_text_size" />
        <LinearLayout
            android:id="@+id/pbba_button_more_about_container_linetwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pbba_button_more_about_pbba_line_margin_top"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/pbba_button_more_about_pbba_icon_size"
                android:layout_height="@dimen/pbba_button_more_about_pbba_icon_size"
                pbba:srcCompat="@drawable/pbba_button_more_about_pbba_icon_black"/>
            <com.zapp.library.merchant.ui.view.CustomTextView
                style="@style/PBBAPopup.Text.Body.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pbba_button_more_about_pbba_text_margin"
                android:gravity="center"
                android:text="@string/pbba_button_more_about_info_secondline_text"
                android:contentDescription="@string/pbba_accessibility_more_about_text"
                android:textColor="@color/pbba_button_more_about_text_color"
                android:textSize="@dimen/pbba_button_more_about_pbba_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
